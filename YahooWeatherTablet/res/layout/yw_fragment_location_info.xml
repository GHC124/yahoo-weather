<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yw_rlLocationInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout android:id="@+id/yw_llLocationInfo_Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yw_tvLocationInfo_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="50sp" 
            />

        <TextView
            android:id="@+id/yw_tvLocationInfo_Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout  android:id="@+id/yw_llLocationInfo_Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/yw_llLocationInfo_Country"
        android:background="@drawable/yw_corner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/yw_width_percent_2">

        <TextView
            android:id="@+id/yw_tvLocationInfo_ActionSign"
            android:layout_width="@dimen/yw_width_percent_3p5"
            android:layout_height="@dimen/yw_height_percent_4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"/>

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/yw_height_percent_4"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#7FFFFFFF" />
        
        <TextView
            android:id="@+id/yw_tvLocationInfo_ActionName"
            android:layout_width="@dimen/yw_width_percent_5"
            android:layout_height="@dimen/yw_height_percent_4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>