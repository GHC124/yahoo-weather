<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/yw_width_percent_31"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="@dimen/yw_height_percent_20"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/yw_tvDialogError_Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="2"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yw_height_percent_7"
        android:gravity="center"
        android:orientation="vertical" >

        <Button android:id="@+id/yw_btDialogError_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/yw_display_ok"/>
    </LinearLayout>

</LinearLayout>