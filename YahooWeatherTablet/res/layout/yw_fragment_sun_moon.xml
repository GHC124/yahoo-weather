<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yw_llSunMoon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yw_sun_moon_title"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="@dimen/yw_width_percent_35"
            android:layout_height="@dimen/yw_height_percent_13"
            android:contentDescription="@string/yw_content_description"
            android:scaleType="fitXY"
            android:src="@drawable/yw_suncurve" />

        <ImageView
            android:id="@+id/yw_ivSunMoon_SunSpot"
            android:layout_width="50dp"
            android:layout_height="@dimen/yw_height_percent_10p5"
            android:layout_marginLeft="@dimen/yw_width_percent_3p5"
            android:contentDescription="@string/yw_content_description"
            android:scaleType="matrix"
            android:src="@drawable/yw_sunspot" />

        <ImageView
            android:id="@+id/yw_ivSunMoon_Sun"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/yw_content_description"
            android:layout_marginLeft="@dimen/yw_width_percent_3p6"
            android:layout_marginTop="@dimen/yw_height_percent_11p3"
            android:scaleType="fitXY"
            android:src="@drawable/yw_sun" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yw_tvSunMoon_Sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp" 
            android:layout_marginLeft="@dimen/yw_width_percent_3"
            />

        <TextView
            android:id="@+id/yw_tvSunMoon_Sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp" 
            android:layout_marginLeft="@dimen/yw_width_percent_25"
            />
    </RelativeLayout>

</LinearLayout>